@{
    var varmodel = (List<BindRevisitOpDummys>)ViewBag.bindRevisitOpDummys;
    Layout = null;
}

<div class="col-md-12">
    <div class="box box-black">
        <div class="box-title">
            <h3><i class="fa fa-tasks"></i>Revisit Op Dummy Patients</h3>
        </div>
        <div class="box-content">
            @await Html.PartialAsync("_Msg")
            <br /><br />
            <div class="table-responsive" style="min-height:0px !important">
                <table class="table table-advance" id="table1">
                    <thead>
                        <tr>
                            <th>S.no</th>
                            <th>Department Name</th>
                            <th>Sex</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody id="">
                        @if (varmodel != null && varmodel.Count != 0)
                        {
                            foreach (var item in varmodel)
                            {
                                <tr class="table-flag-blue">
                                    <td>
                                        @item.SNo
                                        <input type="hidden" class="UHID_" id="UHID_@item.SNo" value="@item.UHID" />
                                        <input type="hidden" class="entry" value="@item.Total" />
                                    </td>
                                    <td>@item.DepartmentName</td>
                                    <td>@item.GenderName</td>
                                    <td>@item.Total</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/jquery-ui-1.12.1/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script type="text/javascript" src="~/assets/data-tables/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/assets/data-tables/datatables.min.js"></script>
<script type="text/javascript" src="~/assets/data-tables/bootstrap3/dataTables.bootstrap.js"></script>

<script type="text/javascript">
    $('#table1').DataTable({
        'aoColumnDefs': [{
            'bSortable': false,
            'aTargets': [-1]
        }]
    });
    setTimeout('$(".autohide").hide()', 5000);
    // Function to calculate the sum of all department inputs
    function calculateTotalEntries() {
        let total = 0;

        // Iterate over each input with the class 'entry'
        $(".entry").each(function () {
            let value = parseInt($(this).val()) || 0;
            total += value;
        });

        // Set the total in the TotalEntries textbox
        $("#TotalEntries").val(total);
    }

    calculateTotalEntries();

</script>
