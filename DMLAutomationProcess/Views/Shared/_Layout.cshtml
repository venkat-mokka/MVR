@{
    string title = ViewBag.title;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RVMH</title>
    @* <title>@ViewData["Title"] - NBH</title> *@
    <link href="~/Content/css/fonts.css" rel="stylesheet" />
    <link href="~/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/bootstrap/css/OCA_Custome.css" rel="stylesheet" />
    <link href="~/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/data-tables/bootstrap3/dataTables.bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/oca.css">
    <link rel="stylesheet" href="~/Content/css/oca-responsive.css">
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">
</head>
<body>
    <!-- BEGIN Navbar -->
    <div id="navbar" class="navbar">
        <button type="button" class="navbar-toggle navbar-btn for-nav-horizontal collapsed" data-toggle="collapse" data-target="#nav-horizontal">
            <span class="fa fa-bars"></span>
        </button>
        <a href="@Url.Action("Index", "Home")" class="navbar-brand">
            <img style="width:70px; height:33px;" src="../images/rvm.png" />
        </a>
        @if (@User.Identity.IsAuthenticated)
        {
            <ul class="nav oca-nav pull-right" id="nav-horizontal">
                <li class="user-profile">
                    <a data-toggle="dropdown" href="#" class="user-menu dropdown-toggle">
                        <span id="user_info">
                            @User?.Identity?.Name
                        </span>
                        <i class="fa fa-caret-down"></i>
                    </a>
                    <!-- BEGIN User Dropdown -->
                    <ul class="dropdown-menu dropdown-navbar" id="user_menu" style="width: 100%; display: none; min-width: 100%; left: auto; right: 0px;">

                        <li>
                            <a href="@Url.Action("ChangePassword", "Account")">
                                <i class="fa fa-key" aria-hidden="true"></i>
                                Change password
                            </a>
                        </li>

                        <li>
                            <a href="@Url.Action("LogOff", "Account")">
                                <i class="ace-icon fa fa-power-off" aria-hidden="true"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                    <!-- BEGIN User Dropdown -->
                </li>
            </ul>
        }

        @if (User.Identity.IsAuthenticated)
        {
            <ul class="nav oca-nav navbar-collapse collapse" id="nav-vertical">
                @if (User.IsInRole("Admin"))
                {
                    <li class="">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bars"></i>
                            <span>OP DEPARTMENT</span>
                            <b class="arrow fa fa-caret-down"></b>
                        </a>
                        <ul class="dropdown-menu dropdown-navbar">
                            <li>
                                <a href='@Url.Action("Registration", "User")' onclick="loading()">
                                    <i class="fa fa-book"></i>
                                    <span>OP Registration</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("ManageUsers", "User")' onclick="loading()">
                                    <i class="fa fa-plus"></i>
                                    <span>IP Registration</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-dollar"></i>
                            <span>BILLING</span>
                            <b class="arrow fa fa-caret-down"></b>
                        </a>
                        <ul class="dropdown-menu dropdown-navbar">
                            <li>
                                <a href='@Url.Action("ManageRoles", "Account")' onclick="loading()">
                                    <i class="fa fa-book"></i>
                                    <span>OP</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("ManageUsers", "User")' onclick="loading()">
                                    <i class="fa fa-plus"></i>
                                    <span>IP</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-users"></i>
                            <span>IP DEPARTMENT</span>
                            <b class="arrow fa fa-caret-down"></b>
                        </a>
                        <ul class="dropdown-menu dropdown-navbar">
                            <li>
                                <a href='@Url.Action("ManageRoles", "Account")' onclick="loading()">
                                    <i class="fa fa-book"></i>
                                    <span>OP</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("ManageUsers", "User")' onclick="loading()">
                                    <i class="fa fa-plus"></i>
                                    <span>IP</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-check-book"></i>
                            <span>CASUALITY</span>
                            <b class="arrow fa fa-caret-down"></b>
                        </a>
                        <ul class="dropdown-menu dropdown-navbar">
                            <li>
                                <a href='@Url.Action("ManageRoles", "Account")' onclick="loading()">
                                    <i class="fa fa-book"></i>
                                    <span>OP</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("ManageUsers", "User")' onclick="loading()">
                                    <i class="fa fa-plus"></i>
                                    <span>IP</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bars"></i>
                            <span>User Management</span>
                            <b class="arrow fa fa-caret-down"></b>
                        </a>
                        <ul class="dropdown-menu dropdown-navbar">
                            <li>
                                <a href='@Url.Action("ManageRoles", "Account")' onclick="loading()">
                                    <i class="fa fa-user"></i>
                                    <span>Manage Roles</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("ManageUsers", "User")' onclick="loading()">
                                    <i class="fa fa-users"></i>
                                    <span>Manage Users</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        }
    </div>
    <!-- END Navbar -->
    <div class="container" id="main-container">
        <div id="main-content">
            <div id="breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="fa fa-home"></i>
                        <a href="@Url.Action("Index", "Home")">Home</a>
                        <span class="divider"><i class="fa fa-angle-right"></i></span>
                    </li>
                    <li class="active">@title</li>
                </ul>
            </div>
            <div id="LoadingID" style="display: none;">
                <img style="height: 98px; margin:0px auto !important; position: absolute; top:50%; left:50%; transform:translate(-50%,-50%);" src="../images/ajax-loader.gif" alt="Loading.." />
            </div>
            @RenderBody()
            <hr />

            <footer>
                @*     <p>@DateTime.Now.Year © RVMH.</p> *@
                <p>@DateTime.Now.Year © NBH.</p>
            </footer>
            <a id="btn-scrollup" class="btn btn-circle btn-lg" href="#"><i class="fa fa-chevron-up"></i></a>
        </div>
        <!-- END Content -->
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/assets/jquery/jquery-2.1.1.min.js"><\/script>')</script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/assets/jquery-cookie/jquery.cookie.js"></script>
    <script src="/Scripts/js/oca.js"></script>
    <script src="/Scripts/js/oca-demo-codes.js"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</body>
</html>
<script type="text/javascript">
    $(".box-tool").hide();
    getmenu = function (id) {
        $("#breadcrumb_item").html(id);
    }
</script>
<script>

    $(".container").click(function () {
        $('.dropdown-menu').fadeOut("fast");
    })

    loading = function () {
        $("#LoadingID").show();
    }
    $(document).ready(function () {
        $("#LoadingID").hide();
    });
</script>

<style>
    #LoadingID {
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.5);
        text-align: center;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 1052;
    }
</style>