@{
    string title = ViewBag.title;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>RVMH</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- bootstrap 3.0.2 -->
    <link href="~/rvm/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="~/rvm/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="~/rvm/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Morris chart -->
    <link href="~/rvm/css/morris/morris.css" rel="stylesheet" type="text/css" />
    <!-- jvectormap -->
    <link href="~/rvm/css/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />
    <!-- fullCalendar -->
    <link href="~/rvm/css/fullcalendar/fullcalendar.css" rel="stylesheet" type="text/css" />
    <!-- Daterange picker -->
    <link href="~/rvm/css/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
    <!-- bootstrap wysihtml5 - text editor -->
    <link href="~/rvm/css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/rvm/css/AdminLTE.css" rel="stylesheet" type="text/css" />

</head>
<body class="skin-blue">
    <!-- header logo: style can be found in header.less -->
    <header class="header">
        <a href='@Url.Action("Index", "Home")' class="logo">
            <img style="width:70px; height:33px;" src="~/images/rvm.png" />
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                @if (@User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="glyphicon glyphicon-user"></i>
                                <span> @User?.Identity?.Name <i class="caret"></i></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href='@Url.Action("ChangePassword", "Account")' class="btn btn-default btn-flat">Change Password</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="@Url.Action("LogOff", "Account")" class="btn btn-default btn-flat">Log out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                @if (User.Identity.IsAuthenticated)
                {
                    string dashboard = "", ManageUsers = "", OrgRegistrations = "", DumRegistrations = "", Reports = "", CMSUsers = "", CMSRoles = "",
                    OPNew = "", OPRevisit = "", OPNewDummy = "", OPRevisitDummy = "", OPSummaryReport = "", OPDeatilsReport = "", highlight = "",
                    adminDashboard = "", doctorDashboard = "", userDashboard = "", OPPatients = "", IPPatients = "", OTSchedule = "";

                    if (title == "Home") { dashboard = "active open highlight"; }
                    if (title == "Admin Dashboard") { adminDashboard = "active open highlight"; highlight = "highlight"; }
                    if (title == "User Dashboard") { userDashboard = "active open highlight"; highlight = "highlight"; }
                    if (title == "Manage Users") { ManageUsers = "active open highlight"; CMSUsers = "active"; }
                    if (title == "Manage Roles") { ManageUsers = "active open highlight"; CMSRoles = "active"; }
                    if (title == "New Registration") { OrgRegistrations = "active open highlight"; OPNew = "active"; }
                    if (title == "Revisit Registration") { OrgRegistrations = "active open highlight"; OPRevisit = "active"; }
                    if (title == "New Op Dummy") { DumRegistrations = "active open highlight"; OPNewDummy = "active"; }
                    if (title == "OP Deatils Report") { Reports = "active open highlight"; OPDeatilsReport = "active"; }
                    if (title == "OP Summary Report") { Reports = "active open highlight"; OPSummaryReport = "active"; }
                    if (title == "OP Deatils Report") { Reports = "active open highlight"; OPDeatilsReport = "active"; }

                    if (title == "Doctotor Dashboard") { doctorDashboard = "active open highlight"; highlight = "highlight"; }
                    if (title == "OP Patients") { OPPatients = "active open highlight"; }
                    if (title == "IP Patients") { IPPatients = "active open highlight"; }
                    if (title == "OT Schedule") { OTSchedule = "active open highlight"; }


                    <!-- sidebar menu: : style can be found in sidebar.less -->

                    <ul class="sidebar-menu">
                        @if (User.IsInRole("Doctor"))
                        {
                            <li class="@doctorDashboard">
                                <a href='@Url.Action("Index", "Doctor")'>
                                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                                </a>
                            </li>
                            <li class="@OPPatients">
                                <a href='@Url.Action("OPPatients", "Doctor")'>
                                    <i class="fa fa-bar-chart-o"></i> <span>OP Patients</span>
                                </a>
                            </li>
                            <li class="@IPPatients">
                                <a href='@Url.Action("IPPatients", "Doctor")'>
                                    <i class="fa fa-laptop"></i> <span>IP Patients</span>
                                </a>
                            </li>
                            <li class="@OTSchedule">
                                <a href='@Url.Action("OTSchedule", "Doctor")'>
                                    <i class="fa fa-edit"></i> <span>OT Schedule</span>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="@userDashboard">
                                <a href='@Url.Action("Index", "User")'>
                                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                                </a>
                            </li>
                            <li class="treeview @OrgRegistrations">
                                <a href="#">
                                    <i class="fa fa-bar-chart-o"></i>
                                    <span>OP Registration</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li class="@OPNew"><a href="@Url.Action("Registration", "User")"><i class="fa fa-angle-double-right"></i> OP New Registration</a></li>
                                    <li class="@OPRevisit"><a href="@Url.Action("Revisit_Registration", "User")"><i class="fa fa-angle-double-right"></i> OP Revisit Registration</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="@adminDashboard">
                                <a href='@Url.Action("Index", "Admin")'>
                                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                                </a>
                            </li>
                            <li class="treeview @OrgRegistrations">
                                <a href="#">
                                    <i class="fa fa-bar-chart-o"></i>
                                    <span>OP Registration</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li class="@OPNew"><a href="@Url.Action("Registration", "User")"><i class="fa fa-angle-double-right"></i> OP New Registration</a></li>
                                    <li class="@OPRevisit"><a href="@Url.Action("Revisit_Registration", "User")"><i class="fa fa-angle-double-right"></i> OP Revisit Registration</a></li>
                                </ul>
                            </li>
                            <li class="treeview @ManageUsers">
                                <a href="#">
                                    <i class="fa fa-laptop"></i>
                                    <span>User Management</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li class="@CMSRoles"><a href="@Url.Action("ManageRoles", "Account")"><i class="fa fa-angle-double-right"></i> Manage Roles</a></li>
                                    <li class="@CMSUsers"><a href="@Url.Action("ManageUsers", "User")"><i class="fa fa-angle-double-right"></i> Manage Users</a></li>
                                </ul>
                            </li>
                            <li class="treeview @DumRegistrations">
                                <a href="#">
                                    <i class="fa fa-edit"></i> <span>OP Patient Porting</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li class="@OPNewDummy"><a href="@Url.Action("NewOpDummy", "User")"><i class="fa fa-angle-double-right"></i> New Patient</a></li>
                                    <li class="@OPRevisitDummy"><a href="@Url.Action("RevisitOpDummy", "User")"><i class="fa fa-angle-double-right"></i> Revist Patient</a></li>
                                </ul>
                            </li>
                            <li class="treeview @Reports">
                                <a href="#">
                                    <i class="fa fa-table"></i> <span>Reports</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li class="@OPSummaryReport"><a href="@Url.Action("OPSummaryReport", "Admin")"><i class="fa fa-angle-double-right"></i>OP NMC Summary Report</a></li>
                                    <li class="@OPDeatilsReport"><a href="@Url.Action("OPDetailsReport", "Admin")"><i class="fa fa-angle-double-right"></i> OP NMC Deatils Report</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                }
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <ol class="breadcrumb" style="left:10px !important">
                    <li><a href='@Url.Action("Index", "Home")'><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">@title</li>
                </ol>
                <h1>
                    <small></small>
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div id="LoadingID" style="display: none;">
                            <img style="height: 98px; margin:0px auto !important; position: absolute; top:50%; left:50%; transform:translate(-50%,-50%);" src="../images/ajax-loader.gif" alt="Loading.." />
                        </div>
                        @RenderBody()
                        <hr />
                        <footer style="text-align:center">
                            <p>@DateTime.Now.Year © RVM CHARITABLE TRUST HOSPITAL.</p>
                        </footer>
                    </div>
                </div>
            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <!-- jQuery UI 1.10.3 -->
    <script src="~/rvm/js/jquery-ui-1.10.3.min.js" type="text/javascript"></script>
    <!-- Bootstrap -->
    <script src="~/rvm/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- Morris.js charts -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="~/rvm/js/plugins/morris/morris.min.js" type="text/javascript"></script>
    <!-- Sparkline -->
    <script src="~/rvm/js/plugins/sparkline/jquery.sparkline.min.js" type="text/javascript"></script>
    <!-- jvectormap -->
    <script src="~/rvm/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js" type="text/javascript"></script>
    <script src="~/rvm/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js" type="text/javascript"></script>
    <!-- fullCalendar -->
    <script src="~/rvm/js/plugins/fullcalendar/fullcalendar.min.js" type="text/javascript"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/rvm/js/plugins/jqueryKnob/jquery.knob.js" type="text/javascript"></script>
    <!-- daterangepicker -->
    <script src="~/rvm/js/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/rvm/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="~/rvm/js/plugins/iCheck/icheck.min.js" type="text/javascript"></script>

    <!-- AdminLTE App -->
    <script src="~/rvm/js/AdminLTE/app.js" type="text/javascript"></script>

    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/rvm/js/AdminLTE/dashboard.js" type="text/javascript"></script>

    <!-- AdminLTE for demo purposes -->
    <script src="~/rvm/js/AdminLTE/demo.js" type="text/javascript"></script>

    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</body>
</html>
<script type="text/javascript">

    $(".box-tool").hide();
    getmenu = function (id) {
        $("#breadcrumb_item").html(id);
    }

    $(".container").click(function () {
        $('.dropdown-menu').fadeOut("fast");
    })

    loading = function () {
        $("#LoadingID").show();
    }
    $(document).ready(function () {
        $("#LoadingID").hide();
    });
</script>

<style>
    #LoadingID {
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.5);
        text-align: center;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 1052;
    }
</style>