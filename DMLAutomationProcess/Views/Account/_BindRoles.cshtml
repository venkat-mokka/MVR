@{
    var varmodel = (List<ApplicationRoleListViewModel>)ViewBag.Roles;
    Layout = null;
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Roles</h3>
                </div><!-- /.box-header -->
                @await Html.PartialAsync("_Msg")
                <div class="btn-toolbar pull-left">
                    <div class="btn-group">
                        <button type="button" onclick="AddRolebyId()" class="btn btn-sm btn-primary"><i class='fa fa-plus'></i> Add</button>
                    </div>
                </div>
                <br /><br />
                <div class="box-body table-responsive">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">Role Name</th>
                                <th class="text-center">Users</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="">
                            @if (varmodel != null && varmodel.Count != 0)
                            {
                                foreach (var item in varmodel)
                                {
                                    <tr class="table-flag-blue">
                                        <td class="text-center">@item.RoleName</td>
                                        <td class="text-center">@item.NumberOfUsers</td>
                                        <td class="text-center">
                                            <button type="button" onclick="EditRolebyId('@item.Id')" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Edit</button>
                                            <button type="button" onclick="DeleteRolebyId('@item.Id')" class="btn btn-sm btn-danger"><i class='fa fa-times'></i> Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>

</section><!-- /.content -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<!-- DATA TABLES -->
<link href="~/rvm/css/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
<!-- DATA TABES SCRIPT -->
<script src="~/rvm/js/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
<script src="~/rvm/js/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
