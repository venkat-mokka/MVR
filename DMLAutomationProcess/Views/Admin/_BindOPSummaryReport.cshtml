@{
    var varmodel = (List<OPSummaryReport>)ViewBag.OPSummaries;
    Layout = null;
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">OPD REG DEPARTMENT WISE SUMMARY REPORT</h3>
                </div><!-- /.box-header -->
                @await Html.PartialAsync("_Msg")
                <br /><br />
                <div class="box-body table-responsive">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th colspan="3">New </th>
                                <th colspan="3">Old </th>
                                <th>Grand Total</th>
                            </tr>
                            <tr>
                                <th></th>
                                <th>Female</th>
                                <th>Male</th>
                                <th>Total</th>
                                <th>Female</th>
                                <th>Male</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="">
                            @if (varmodel != null && varmodel.Count != 0)
                            {
                                foreach (var item in varmodel)
                                {
                                    <tr>
                                        <td>@item.DepartmentName</td>
                                        <td>@item.NewFemale</td>
                                        <td>@item.NewMale</td>
                                        <td>@item.NewTotal</td>
                                        <td>@item.OldFemale</td>
                                        <td>@item.OldMale</td>
                                        <td>@item.OldTotal</td>
                                        <td>@item.GrandTotal</td>
                                    </tr>
                                }
                                <tr>
                                    <td>Total</td>
                                    <td>@varmodel.Sum(x => x.NewFemale)</td>
                                    <td>@varmodel.Sum(x => x.NewMale)</td>
                                    <td>@varmodel.Sum(x => x.NewTotal)</td>
                                    <td>@varmodel.Sum(x => x.OldFemale)</td>
                                    <td>@varmodel.Sum(x => x.OldMale)</td>
                                    <td>@varmodel.Sum(x => x.OldTotal)</td>
                                    <td>@varmodel.Sum(x => x.GrandTotal)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>

</section><!-- /.content -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<!-- DATA TABLES -->
<link href="~/rvm/css/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
<!-- DATA TABES SCRIPT -->
<script src="~/rvm/js/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
<script src="~/rvm/js/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#example1").dataTable();
    setTimeout('$(".autohide").hide()', 5000);
    //$('#table1').css('width', '');

</script>
