@{
    var varmodel = (List<OPSummaryReport>)ViewBag.OPSummaries;
    Layout = null;
}
<div class="col-md-12">
    <div class="box box-black">
        <div class="box-title">
            <h3><i class="fa fa-tasks"></i>OPD REG DEPARTMENT WISE SUMMARY REPORT</h3>
        </div>
        <div class="box-content">
            @await Html.PartialAsync("_Msg")
            <br /><br />
            <div class="table-responsive" style="min-height:0px !important">
                <table class="table table-advance" id="table1">
                    <thead>
                        <tr>
                            <th></th>
                            <th colspan="3">New </th>
                            <th colspan="3">Old </th>
                            <th>Grand Total</th>
                        </tr>
                        <tr>
                            <th></th>
                            <th>Female</th>
                            <th>Male</th>
                            <th>Total</th>
                            <th>Female</th>
                            <th>Male</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="">
                        @if (varmodel != null && varmodel.Count != 0)
                        {
                            foreach (var item in varmodel)
                            {
                                <tr>
                                    <td>@item.DepartmentName</td>
                                    <td>@item.NewFemale</td>
                                    <td>@item.NewMale</td>
                                    <td>@item.NewTotal</td>
                                    <td>@item.OldFemale</td>
                                    <td>@item.OldMale</td>
                                    <td>@item.OldTotal</td>
                                    <td>@item.GrandTotal</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/jquery-ui-1.12.1/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script type="text/javascript" src="~/assets/data-tables/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/assets/data-tables/datatables.min.js"></script>
<script type="text/javascript" src="~/assets/data-tables/bootstrap3/dataTables.bootstrap.js"></script>

<script type="text/javascript">
    $('#table1').DataTable({
        'aoColumnDefs': [{
            'bSortable': false,
            'aTargets': [-1]
        }]
    });
    setTimeout('$(".autohide").hide()', 5000);
    $('#table1').css('width', '');

</script>
